def linear_search(arr, target):
    for i, element in enumerate(arr):
        if element == target:
            return i
    return -1

arr = [2, 4, 0, 1, 9]
target = 1
result = linear_search(arr, target)

if result != -1:
    print(f"Element found at index {result}")
else:
    print("Element not found in the array")
